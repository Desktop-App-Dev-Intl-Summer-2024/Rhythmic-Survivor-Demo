<Window x:Class="Assigment01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assigment01"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="1024">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/farm.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="226*"/>
            <RowDefinition Height="237*"/>
            <RowDefinition Height="161*"/>
        </Grid.RowDefinitions>
        <Label Content="Welcome" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48"/>
        <Label Content="Choose window:" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="22"/>
        <Button x:Name="adminAppButton" Content="Admin" HorizontalAlignment="Center" Margin="0,67,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Height="38" Width="214" Click="adminAppButton_Click"/>
        <Button x:Name="salesAppButton" Content="Sales" HorizontalAlignment="Center" Margin="0,119,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Height="38" Width="214" Click="salesAppButton_Click"/>

    </Grid>
</Window>
